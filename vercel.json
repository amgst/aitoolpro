{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/[...path].ts": {}
  },
  "rewrites": [
    { "source": "/health", "destination": "/api/health" },
    { "source": "/tools", "destination": "/api/tools" },
    { "source": "/tools/(.*)", "destination": "/api/tools/$1" },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}

